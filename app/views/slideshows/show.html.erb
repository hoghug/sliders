<%= link_to '<< Back', slideshows_path %>
<hr>
<h1 class="slideshow-header"><%= @slideshow.title %></h1>
<%= simple_form_for(@slideshow) do |f| %>
	<%= f.input :title, label: false %>
	<%= f.button :submit, class: 'btn-primary' %>
<% end %>
<a href="#" class="edit-slideshow-title"><%= fa_stacked_icon 'pencil', base: 'square-o' %></a>


<% @slides.each do |slide| %>
	<%= render 'slides/slide', slide: slide %>
<% end %>


<h2>New Slide</h2>

<%= simple_form_for [@slideshow, @slide], html: {multipart: true} do |f| %>
	<%= f.input :title, label: false, placeholder: 'Title' %>
	<div><%= f.text_area :description, label: false, placeholder: 'Description' %></div>
	<div><%= f.file_field :image %></div>
	<%= f.button :submit, class: 'btn-primary' %>
<% end %>